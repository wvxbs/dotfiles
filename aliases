### ALIASES  ### 
 
# package manager
alias dnfup='sudo dnf update -y && sudo dnf upgrade -y'
alias dnfin='sudo dnf install'
alias dnfrm='sudo dnf remove'
alias dnfau='sudo dnf autoremove -y'
 
# docker
alias docker-run='sudo docker run'
alias cup='sudo docker-compose up --force-recreate --remove-orphans'
alias cupd='sudo docker-compose up --force-recreate --remove-orphans -d'
alias cdev='sudo docker-compose -f docker-compose-dev.yml up --force-recreate --remove-orphans'
alias cdevd='sudo docker-compose -f docker-compose-dev.yml up --force-recreate --remove-orphans -d'
alias cbuild='sudo docker-compose build'
alias cdown='sudo docker-compose down --remove-orphans'
 
# navigation
alias ls='ls -lah --color=auto'
alias ..='cd ..'
alias repos='cd ~/Documentos/repos'
alias pro='~/Documentos/Projetos'

# mkdir with create parents argument
alias mkdir='mkdir -pv'
 
# better file manipulation 
alias mv='mv -i' 
alias cp='cp -i' 
alias rm='rm -i' 
alias ln='ln -i' 
 
# better vim
alias vim='nvim' 
alias svim='sudo nvim'

# undervolt 
alias und='sudo undervolt --core -150'

# git 
alias clone='git clone'
alias branch='git branch'
alias commit='git commit -m'
alias checkout='git checkout'
alias adall='git add .'
alias add='git add'
alias push='git push'

# github cli
alias gclone='gh repo clone '
